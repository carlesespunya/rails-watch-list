<div class="banner1">
  <h1>Save any kind of movies in your lists</h1>
</div>

<div class="con">
  <h2>My lists: </h2>
  <button type="button" class="btn btn-success float-right"><%= link_to "Create a movie list", new_list_path, :class => "button" %></button>
</div>
  <div class="container">
    <div class="row">
    <% @lists.each do |list| %>
      <div class="col-4">
        <%= link_to list_path(list) do%>
        <div class="card">
          <%= cl_image_tag list.photo.key, height: 200, width: 300, crop: :fill, class:"card-image" %>
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <h5 class="card-text"><%= list.name %></h5>
              <%= link_to 'Delete', list_path(list), method: :delete, data: {confirm: "Are you sure?"}, :class => "link" %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
